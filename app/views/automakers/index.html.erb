<p class="text-success"><%= notice %></p>

<div class="container">
  <h1 class="text-center text-danger mb-4">Fabricantes</h1>
</div>

<div class="container">
  <div class="row justify-content-center">
    <% @automakers.each_slice(5) do |automaker_row| %>
      <div class="row justify-content-center mb-3">
        <% automaker_row.each do |automaker| %>
          <div class="col-md-2">
            <%= link_to automaker_path(automaker), class: "card-link" do %>
              <div class="card card-custom" style="width: 100%;">
                <div class="card-body">
                  <h5 class="card-title"><%= automaker.name %></h5>
                  <p class="card-text">
                    <strong>Pais:</strong> <%= automaker.country %><br>
                    <strong>Ano de Fundação: </strong> <%= automaker.fundation_year %>
                    <strong>Veículos:</strong> <%= automaker.vehicles.count %>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="text-center mb-4">
    <%= button_to "Novo Fabricante", new_automaker_path, class: "btn btn-primary mb-2", method: :get %>
    <%= button_to "Modelos de Carros", vehicle_models_path, class: "btn btn-success mb-2", method: :get %>
    <%= button_to "Veículos", vehicles_path, class: "btn btn-success", method: :get %>
  </div>
</div>
